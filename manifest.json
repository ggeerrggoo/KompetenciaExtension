{
  "name": "TeKaKu",
  "description": "A Tehetség Kapujának Kulcsa - automata kompetenciamérés",
  "version": "0.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "tehetsegkapu_logo.png"
  },
  "content_scripts": [
    {
      "js":["scripts/content_loader.js"],
      "matches": [
        "*://*.tehetsegkapu.hu/*",
        "*://tehetsegkapu.hu/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js", "task_logic/*.js"],
      "matches": ["*://*.tehetsegkapu.hu/*", "*://tehetsegkapu.hu/*"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://tekaku.hu/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}