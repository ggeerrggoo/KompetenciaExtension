{
  "name": "TeKaKu",
  "description": "A Tehetség Kapujának Kulcsa - automata kompetenciamérés",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "tehetsegkapu_logo.png"
  },
  "content_scripts": [
    {
      "js":["scripts/content_loader.js"],
      "matches": [
        "*://*.tehetsegkapu.hu/*",
        "*://tehetsegkapu.hu/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*.js", 
        "task_logic/*.js",
        "setup_files/*.html"
      ],
      "matches": ["*://*.tehetsegkapu.hu/*", "*://tehetsegkapu.hu/*"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://tekaku.hu/*"
  ],
  "options_ui": {
    "page": "settings_files/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background_worker/background.js"
  }
}